package com.example.demo.service;

import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;

@Service
public class MmtServiceImpl implements  MmtService{

	@Override
	public ResponseEntity callIrctcApi() {
		
		//http://localhost:8080/irctc/info
		
		RestTemplate restTemplate = new RestTemplate();
		ResponseEntity<String> response =  restTemplate.getForEntity("http://localhost:8080/irctc/info", String.class);
		
		return response;
	}

	
}
