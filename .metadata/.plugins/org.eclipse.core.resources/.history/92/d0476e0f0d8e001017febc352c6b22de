

# ===============================
# Server
# ===============================
server.port=8080

# ===============================
# Database (PostgreSQL)
# ===============================
spring.datasource.url=jdbc:postgresql://localhost:5432/gdpr_db
spring.datasource.username=amin
spring.datasource.password=admin
spring.datasource.driver-class-name=org.postgresql.Driver

# Hibernate (development mode)
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.database-platform=org.hibernate.dialect.PostgreSQLDialect

# ===============================
# JWT Properties
# ===============================
jwt.secret=${JWT_SECRET:ChangeThisJWTSecretInProduction}
jwt.expiration_ms=${JWT_EXP_MS:3600000}   # default: 1 hour

# ===============================
# Logging
# ===============================
logging.level.org.springframework.security=INFO
logging.level.com.example.gdpr=DEBUG




